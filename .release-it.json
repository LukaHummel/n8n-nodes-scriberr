{
  "github": {
    "release": true,
    "releaseName": "Release ${version}"
  },
  "git": {
    "commitMessage": "Release ${version}",
    "tagName": "v${version}",
    "push": true,
    "requireBranch": "main"
  },
  "npm": {
    "publish": true,
    "publishConfig": {
      "provenance": true,
      "access": "public"
    },
    "skipChecks": true
  },
  "hooks": {
    "before:init": ["npm run lint", "npm run build"]
  }
}